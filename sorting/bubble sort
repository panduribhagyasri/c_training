#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int n;
    scanf("%d",&n);
    
    int arr[n], i, j;
    for(i=0;i<n;i++)
        scanf("%d",&arr[i]);
    
    int count = 0, swapCount = 0;
    
    for(i=0;i<n-1;i++)
    {
        int flag = 1;
        for(j=0;j<n-i-1;j++)
        {
            count++;
            if(arr[j] > arr[j+1])
            {
                flag = 0;
                swapCount++;
                int temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
        if(flag)
            break;
    }
    
    for(i=0;i<n;i++)
        printf("%d ",arr[i]);
    
    printf("\nTotal: %d\nSwaps Count: %d",count,swapCount);
    return 0;
}
